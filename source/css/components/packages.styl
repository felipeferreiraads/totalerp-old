.packages
    .nav-packages
        background #EDEFF0
        z-index: 1
        position relative
        border-radius: 18px
        overflow hidden
        +below($bp.md)
            display none
    .packages-select
        position relative
        +above($bp.md)
            display none
        &::after
            content: '\f107'
            font-family 'FontAwesome'
            color #666
            font-size: 25px
            position absolute
            top 50%
            right 20px
            transform translateY(-50%)
        select
            width 100%
            height 40px
            background #edeff0
            appearance none
            -moz-appearance: none
            -webkit-appearance: none
            border: none
            border-radius: 24px;
            padding 0 20px
            color #666
            font-size: 18px
            outline 0
    .grid
        display flex
        a
            flex 1
            text-align center
            font-size: 16px
            line-height 40px
            color #666
            transition: all .2s
            position relative
            outline 0
            &:not(:last-child)
                &::before
                    content: ''
                    width 1px
                    height 70%
                    background: #ccc
                    position absolute
                    right 0
                    top 50%
                    transform translateY(-50%)
            &:hover, &.selected
                background: #29c9ff
                &::after
                    visibility visible
                    opacity 1
            &::after
                content: ''
                width: 0
                height: 0
                border-style: solid
                border-width: 12px 10px 0 10px
                border-color: #29c9ff transparent transparent transparent
                position absolute
                top 100%
                left: 50%
                transform translateX(-50%)
                visibility hidden
                opacity 0
                transform all .2s
    .package
        z-index: 0
        position relative
        display none
        padding 60px 0
        &#atacado
            display block
        .container
            position relative
        .grid
            display flex
            flex-wrap: wrap
            .info
                width 50%
                +below($bp.lg)
                    width 100%
            .image
                flex 1
                padding 100px 0 0 20px
                +below($bp.lg)
                    width 100%
                    flex auto
                    padding 30px 0 0
                img
                    max-width 100%
        .button
            padding 0 40px
            line-height 50px
            background #242424
            color white
            font-size: 20px
            border-radius: 25px
        .package-value
            padding 10px 40px
            background #283349
            border-radius: 25px
            display flex
            top 0
            right: 20px
            +above($bp.md)
                position absolute
            +below($bp.md)
                margin-bottom 20px
            > div
                display flex
                flex-direction column
            .type
                font-size: 12px
                color white
                margin-bottom 5px
            .value
                font-size: 20px
                color white
                i
                    font-style: normal
                    color: #29c9ff
            .left
                padding-right 20px
                position relative
                &::after
                    content: ''
                    width 1px
                    height 80%
                    background white
                    position absolute
                    right 0
                    top 50%
                    transform translateY(-50%)
            .right
                padding-left 20px

        h2, h3
            font-size: 35px
            color #283349
            margin-bottom: 20px
        h3
            font-size: 20px
            color #666
        p
            font-size: 18px
            color #666
            line-height 2
    h4
        font-size: 20px
        color #666
        font-weight: 700
        margin 30px 0 25px
    .module-list
        list-style-type: none
        display flex
        flex-wrap: wrap
        padding 0
        li
            width 48%
            display flex
            align-items: center
            margin-bottom 20px
            position relative
            cursor pointer
            &:hover
                .tooltip
                    visibility visible
                    opacity 1
            +below($bp.md)
                width 50%
            +below($bp.sm)
                width 100%
            h5
                font-size: 18px
                color #666
                font-weight: 400
            img
                margin-right 15px
            .tooltip
                width 280px
                padding 10px
                background #242424
                border-radius: 10px
                color white
                display block
                font-size: 14px
                position absolute
                bottom 130%
                left 0%
                line-height 1.5
                visibility hidden
                opacity 0
                transition: .2s
                &::after
                    content: ''
                    width: 0
                    height: 0
                    border-style: solid
                    border-width: 6px 5px 0 5px
                    border-color: #242424 transparent transparent transparent
                    position absolute
                    top 100%
                    left 50%
                    transform translateX(-50%)

    .buttons
        margin 30px auto 0
        display flex
        justify-content: center
        a, button
            width 160px
            line-height 60px
            text-align center
            display block
            font-size: 18px
            color white
            background: #283349
            transition .2s
            border none
            cursor pointer
            font-family: 'Roboto', sans-serif;
            &:hover
                background: #29c9ff
                &.buy
                    background #2ecc71
            &:first-child
                border-radius: 24px 0 0 24px
                position relative
                &::after
                    content: ''
                    width 1px
                    height 50%
                    background white
                    position absolute
                    right 0
                    top 50%
                    transform translateY(-50%)
            &:last-child
                border-radius: 0 24px 24px 0

.menu-mobile
    display none

.header-desktop
    +below($bp.lg)
        display none

.header-mobile
    +above($bp.lg)
        display none

.menu-item
    margin-top: 20px
    a
        transition: .2s
        &:hover
            color: #29C9FF !important
    
.scroll-on-mobile
    +below($bp.lg)
        max-width 100%
        overflow-x: scroll
    table
        min-width: 920px
